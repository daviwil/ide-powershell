{
  "name": "ide-powershell",
  "version": "0.1.0",
  "description": "PowerShell language support for Atom-IDE.",
  "author": "David Wilson",
  "license": "MIT",
  "main": "./lib/main",
  "engines": {
    "atom": ">=1.21.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daviwil/ide-powershell.git"
  },
  "keywords": [
    "powershell",
    "atom",
    "atom-ide"
  ],
  "bugs": {
    "url": "https://github.com/daviwil/ide-powershell/issues"
  },
  "homepage": "https://github.com/daviwil/ide-powershell#readme",
  "package-deps": ["language-powershell", "terminal-tab-service", "atom-ide-ui"],
  "dependencies": {
    "@types/atom": "^1.21.8",
    "@types/node": "^8.0.41",
    "atom-languageclient": "^0.7.3",
    "atom-ts-transpiler": "^1.2.4",
    "atom-package-deps": "^4.6.1",
    "typescript": "^2.6.1",
    "decompress": "^4.2.0"
  },
  "enhancedScopes": [
    "source.powershell"
  ],
  "configSchema": {
    "enableProfileLoading": {
      "type": "boolean",
      "title": "Enable loading PowerShell profiles",
      "default": true
    },
    "developer": {
      "type": "object",
      "properties": {
        "editorServicesLogLevel": {
          "type": "string",
          "default": "Verbose",
          "title": "PowerShell Editor Services Log Level",
          "description": "Sets the logging verbosity level for the PowerShell Editor Services host executable.",
          "enum": [
            { "value": "Normal", "description": "Normal" },
            { "value": "Warning", "description": "Warning" },
            { "value": "Error", "description": "Error" },
            { "value": "Verbose", "description": "Verbose" },
            { "value": "Diagnostic", "description": "Diagnostic" }
          ]
        },
        "bundledModulesPath": {
          "type": "string",
          "default": "",
          "description": "Specifies an alternate path to the folder containing modules that are required for the ide-powershell package (i.e. PowerShell Editor Services, PSScriptAnalyzer, Plaster)"
        },
        "featureFlags": {
          "type": "array",
          "default": [],
          "description": "An comma-delimited list of names that enable experimental features in the package.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "consumedServices": {
    "terminal-tab": {
      "versions": {
        ">= 0.1.0": "consumeTerminalTabService"
      }
    },
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    },
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    },
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "code-format.range": {
      "versions": {
        "0.1.0": "provideCodeFormat"
      }
    },
    "code-highlight": {
      "versions": {
        "0.1.0": "provideCodeHighlight"
      }
    },
    "definitions": {
      "versions": {
        "0.1.0": "provideDefinitions"
      }
    },
    "find-references": {
      "versions": {
        "0.1.0": "provideFindReferences"
      }
    },
    "outline-view": {
      "versions": {
        "0.1.0": "provideOutlines"
      }
    }
  },
  "atomTranspilers": [
    {
      "transpiler": "atom-ts-transpiler",
      "glob": "{!(node_modules)/**/,}lib/*.ts?(x)",
      "options": {
        "compilerOptions": {},
        "cacheKeyFiles": [
          "tsconfig.json"
        ],
        "verbose": false
      }
    }
  ]
}
